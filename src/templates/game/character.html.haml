%h3 #{data['name']}

%h3.moves Normals
%ul.moves.normal_moves
  - data['moves']['normals'].each do |m|
    -# TODO add image link here
    = render_move(engine, 'normal_move', m)

%h3.moves Specials
%ul.moves.special_moves
  - data['moves']['specials'].each do |m|
    = render_move(engine, 'special_move', m)

- if data['moves']['overdrives']
  %h3.moves Overdrives
  %ul.moves.overdrives
    - data['moves']['overdrives'].each do |o|
      = render_move(engine, 'overdrive', o)

- if data['moves']['instant_kills']
  %h3.moves Instant Kills
  %ul.moves.instant_kills
    - data['moves']['instant_kills'].each do |k|
      = render_move(engine, 'normal_move', k)
