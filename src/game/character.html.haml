%h3 #{data['name']}

%h3.moves Normals
%ul.moves.normal_moves
- data['moves']['normals'].each do |m|
  %li.moves.normal_move
    -# TODO add image link here
    = m

%h3.moves Specials
%ul.moves.special_moves
- data['moves']['specials'].each do |m|
  %li.move.special_move
    -# TODO add image link here
    .move.special_move_name
      Name:
      = m['name']
    %ul.move.special_move.special_move_details
      - if m['conditions']
        %li.move.special_move.special_move_condition
          Conditions
          = m['conditions']
      %li.move.special_move.special_move_inputs
        Inputs:
        %ul.move.special_move.special_move_inputs.inputs
          - [m['inputs']].flatten.each do |i|
            %li.move.special_move.special_move_input
              = i
      - if m['follow_ups']
        %li.move.special_move.special_move_follow_ups
          Follow-Ups:
          %ul.move.special_move.special_move_follow_ups_list
            - m['follow_ups'].each do |f|
              %li.move.special_move.special_move_name.special_move_follow_up
                Name
                = f['name']
              - if f['conditions']
                %li.move.special_move.special_move_follow_up.special_move_condition
                  Conditions
                  = f['conditions']
              %li.move.special_move.special_move_input.special_move_follow_up
                Inputs:
                %ul.move.special_move.special_move_inputs.inputs
                  - [m['inputs']].flatten.each do |i|
                    %li.move.special_move.special_move_input
                      = i
              %li.move.special_move.special_move_follow_up.special_move_condition
                Conditions
                = f['conditions']
      - if m['follow_up_to']
        %li.move.special_move.special_move_follow_up_to
          Follow-up to:
          %ul.move.special_move.special_move_follow_up_to_list
            - [m['follow_up_to']].flatten.each do |f|
              %li.move.special_move.special_move_follow_up_to
                = f

- if data['moves']['instant_kills']
  %h3.moves Instant Kills
  %ul.moves.instant_kills
  - data['moves']['instant_kills'].each do |k|
    %li.move.instant_kill.instant_kill_name
      Name:
      = k['name']
    %li.move.instant_kill.instant_kill_inputs
      Inputs:
      %ul.move.instant_kill.instant_kill_inputs.inputs
        - k['inputs'].each do |i|
          %li.move.instant_kill.instant_kill_input
            = i
